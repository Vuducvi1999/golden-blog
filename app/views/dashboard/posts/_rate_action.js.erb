


for (let i=1; i<=5;i++){
  $(`#score-${i}`).click(()=>{
    $(`#score-field`).val(i)
    $(`#submit-rating`).click()
  })
  $(`#score-${i}`).hover(
    (over)=>{
      for(let j=1; j<=i; j++)
        $(`#score-${i}`).addClass('text-warning')
    },
    (out)=>{
      for (let j=1; j<=5;j++)
        $(`#score-${j}`).removeClass('text-warning')      
    }
  )
}


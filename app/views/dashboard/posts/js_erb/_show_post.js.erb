
$( document ).on('turbolinks:load', function() {
  let headerHeight = $('#mainNav').innerHeight();

  var lastScrollTop = 0;

  $(window).scroll(function(event){
    var st = $(this).scrollTop();
    if (st > lastScrollTop){
      $("#vote-component").css({
        top: `0px`
      })
    } else {
      $("#vote-component").css({
        top: `${headerHeight}px`
      })
    }
    lastScrollTop = st;
  })

    
})




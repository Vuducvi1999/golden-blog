
$( document ).on('turbolinks:load', function() {
  let headerHeight = $('#mainNav').innerHeight();

  var lastScrollTop = 0;

  $(window).scroll(function(event){
    var st = $(this).scrollTop();
    if (st > lastScrollTop){
      $("#vote-component").css({
        top: `0px`
      })
    } else {
      $("#vote-component").css({
        top: `${headerHeight}px`
      })
    }
    lastScrollTop = st;
  })


  $('#facebook-share').html("<%= j render(partial:'shared/share_button')%>")

    var s = document.createElement("script");
    s.type = "text/javascript";
    s.src = "https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v11.0&appId=2600681456895279&autoLogAppEvents=1";
    $('#script-social-media').html(s)
    // FB.XFBML.parse();
    
})



